    {% block js %}
    <script type="text/javascript">
function Login(){
    var parameters = "";
    if($F('username') && $F('password')){
	parameters = "username=" + $F('username') + "&password=" + $F('password');
    }
    new Ajax.Request("/login", {
			 method: 'post',
			 parameters: parameters,
			 asynchronous: true,
			 onSuccess: function(ret) {
			     var out = "";
			     if(ret.responseText == -1){
				 $('loginout').innerHTML = "<font color=\"red\">Login failed</font>\n";
			     }else{
				 $('loginmsg').innerHTML = "<font color=\"white\">Logged in as "+$F('username')+"</font><button onClick=\"Logout();\">Logout</button>";
                                 location.reload();
			     }
			 }
		     });
    
}
function Logout(){
    new Ajax.Request("/logout", {
			 method: 'get',
			 asynchronous: true,
			 onSuccess: function(ret) {
			     var out = "";
			     if(ret.responseText == 1){
                                 location.reload();
			     }
			 }
		     });
}
</script>
      
    {% endblock %}
